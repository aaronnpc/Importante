    elif rng3==5:
        d5 = random.randint(701,900)
        print(f"Sua espada estava BEM AFIADA! Parabêns! Você deu {d5} de dano!")
        print("O Ramon VI diz 'Essa doeu! pare de fazer isso comigo!'")
        vdrVI-=d5
