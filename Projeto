    else:
        d6 = random.randint(901,1000)
        print(f"Sua espada estava PERFEITAMENTE afiada! parabêns!")
        print("O Ramon VI diz 'NÃÃÃÃÃO! EU NÃO POSSO TOMAR ESSA QUANTIDADE DE DANO!'")
        vdrVI-=d6
        print(f"O Ramon VI está com {vdrVI} de vida!")
    a = random.randint(25,50)
    vida-=a
    print(f"Você está com {vida} vida!")
    if vida<=0:
        print("Você perdeu, mas já?")
        break
    if vdrVI<=0:
        print("VOCÊ NÃO PODE ME DERROTAR!!!!!!!!!!!!!!! NÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃÃO!")
        
        
